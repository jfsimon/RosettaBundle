<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>

        <parameter key="besimple_rosetta.domain_manager.class">BeSimple\RosettaBundle\Model\DomainManager</parameter>
        <parameter key="besimple_rosetta.message_manager.class">BeSimple\RosettaBundle\Model\MessageManager</parameter>
        <parameter key="besimple_rosetta.translation_manager.class">BeSimple\RosettaBundle\Model\TranslationManager
        </parameter>

    </parameters>
    <services>

        <service id="besimple_rosetta.domain_manager" class="%besimple_rosetta.domain_manager.class%">
            <argument type="service" id="besimple_rosetta.domain_repository"/>
            <argument type="service" id="besimple_rosetta.model_factory"/>
        </service>

        <service id="besimple_rosetta.message_manager" class="%besimple_rosetta.message_manager.class%">
            <argument type="service" id="besimple_rosetta.message_repository"/>
            <argument type="service" id="besimple_rosetta.model_factory"/>
        </service>

        <service id="besimple_rosetta.translation_manager" class="%besimple_rosetta.translation_manager.class%">
            <argument type="service" id="besimple_rosetta.translation_repository"/>
            <argument type="service" id="besimple_rosetta.model_factory"/>
        </service>

    </services>
</container>
