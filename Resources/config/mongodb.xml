<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>

        <parameter key="besimple_rosetta.entity_factory.class">BeSimple\RosettaBundle\Entity\Factory</parameter>
        <parameter key="besimple_rosetta.domain_repository.class">BeSimple\RosettaBundle\Document\DomainRepository
        </parameter>
        <parameter key="besimple_rosetta.message_repository.class">BeSimple\RosettaBundle\Document\MessageRepository
        </parameter>
        <parameter key="besimple_rosetta.translation_repository.class">
            BeSimple\RosettaBundle\Document\TranslationRepository
        </parameter>

    </parameters>
    <services>

        <service id="besimple_rosetta.entity_factory" class="%besimple_rosetta.entity_factory.class%">
        </service>

        <service id="besimple_rosetta.domain_repository" class="%besimple_rosetta.domain_repository.class%">
            <argument type="service" id="doctrine.odm.mongodb.document_manager"/>
        </service>

        <service id="besimple_rosetta.message_repository" class="%besimple_rosetta.message_repository.class%">
            <argument type="service" id="doctrine.odm.mongodb.document_manager"/>
        </service>

        <service id="besimple_rosetta.translation_repository" class="%besimple_rosetta.translation_repository.class%">
            <argument type="service" id="doctrine.odm.mongodb.document_managerr"/>
        </service>

    </services>
</container>
